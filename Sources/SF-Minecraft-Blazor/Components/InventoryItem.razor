@using Model.Item
<div
    class="item"
    ondragover="event.preventDefault();"
    draggable="true"
    @ondragstart="@OnDragStart"
    @ondrop="@OnDrop"
    @ondragenter="@OnDragEnter"
    @ondragleave="@OnDragLeave">

    @if (Item != null)
    {
        @if (!string.IsNullOrWhiteSpace(Item.ImageBase64))
        {
            <img src="data:image/png;base64, @(Item.ImageBase64)" class="img-preview-small" title="@Item.DisplayName" alt="@Item.DisplayName"
                 style="width: 100%;"/>
        }
        else
        {
            <img src="images/default.png" class="img-preview-small" title="@Item.DisplayName" alt="@Item.DisplayName" style="width: 100%;"/>
        }
    }
</div>