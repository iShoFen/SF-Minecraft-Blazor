<CascadingValue Value="@this">
    <div class="container">
        <div class="row">
            <div class="col-6">
                <div>
                    <div class="css-grid">
                        @foreach (var item in Items)
                        {
                            <InventoryItem Item="item" NoDrop="true"/>
                        }
                    </div>
                </div>
            </div>
            
            <div class="col-12">
                <div>Actions</div>
                <div class="actions" id="actions"></div>
            </div>
        </div>
    </div>
</CascadingValue>